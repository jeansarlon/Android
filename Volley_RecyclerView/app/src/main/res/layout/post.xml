<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/BackGroundImageView"
                    android:layout_width="match_parent"
                    android:id="@+id/ivPost"
                    android:src="@drawable/geleira"
                    android:layout_height="250dp"
                    android:cropToPadding="false" />

                <LinearLayout
                    android:padding="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ivPost"
                    android:layout_alignTop="@id/ivPost"
                    android:layout_alignRight="@id/ivPost"
                    android:layout_alignBottom="@id/ivPost"
                    android:gravity="bottom"
                    android:background="@drawable/bg_iv"
                    android:orientation="vertical">

                    <TextView
                        android:text="Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:id="@+id/tvTitulo"/>

                    <TextView
                        android:text="subtitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:id="@+id/tvSubtitulo"/>

                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_height="40dp"
                android:paddingBottom="1sp"
                android:layout_marginTop="10sp"
                android:background="#ececec"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/linearLayout2"
                        android:layout_marginRight="20sp">

                            <ImageView
                                android:layout_width="16sp"
                                android:layout_height="16sp"
                                android:src="@drawable/ic_user"
                                android:id="@+id/imageView"
                                android:layout_marginRight="8sp"/>

                        <TextView
                            android:text="Usuario"
                            android:textColor="#a6a6a6"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tvUsuario" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/linearLayout3"
                        android:layout_toEndOf="@+id/linearLayout2">

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:src="@drawable/ic_clock"
                            android:id="@+id/imageView2"
                            android:layout_marginRight="8sp"/>

                            <TextView
                                android:text="9 Nov, 2016"
                                android:textColor="#a6a6a6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvData"
                                android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:text="Post"
                android:textColor="#535353"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:id="@+id/tvTextoPost"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>