<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/item"
    android:layout_marginBottom="5dp">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:id="@+id/guest_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guests_item_list_name"
                android:background="#f9f9f9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_columnWeight="8"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:paddingRight="10dp"
                android:text="nome" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:columnCount="12"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <GridLayout
                    android:layout_rowWeight="1"
                    android:columnCount="1"
                    android:rowCount="4"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="4"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tv_guests_item_list_age"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="30" />

                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/editText"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Idade" />
                </GridLayout>


                <GridLayout
                    android:layout_rowWeight="1"
                    android:background="@drawable/border_left"
                    android:columnCount="1"
                    android:rowCount="4"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="4"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tv_guests_item_list_table"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="30" />

                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Mesa" />
                </GridLayout>

                <GridLayout
                    android:layout_rowWeight="1"
                    android:background="@drawable/border_left"
                    android:columnCount="1"
                    android:rowCount="4"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="4"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/tv_guests_item_list_confirm"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Sim" />

                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Confirmado" />
                </GridLayout>

            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>