<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="20sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jean.cerimonialistas.AtvLogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="#fff"
        android:id="@+id/tvResultado"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <Button
            android:text="Ainda NÃ£o tem Uma conta?"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/bt_cadastro"
            android:layout_below="@+id/btn_loginVolley"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_alpha0"
            android:textColor="#fff"
            android:paddingTop="10sp"
            android:textSize="12sp"
            android:gravity="top|left|center_vertical|center_horizontal"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_loginVolley"
            android:textColor="#fff"
            android:background="@drawable/login_bt_bg"
            android:layout_below="@+id/senha"
            android:layout_alignParentStart="true" />

        <EditText
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:hint="Email "
            android:layout_marginBottom="10sp"
            android:theme="@style/Login_ET"
            android:background="@drawable/login_et_bg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/senha"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:layout_below="@+id/login"
            android:layout_alignParentLeft="true"
            android:theme="@style/Login_ET"
            android:background="@drawable/login_et_bg"
            android:layout_marginBottom="30sp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
