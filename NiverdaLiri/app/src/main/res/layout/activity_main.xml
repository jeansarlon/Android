<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="niverdaliri.jeansarlon.niverdaliri.MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Busque por mesa ou nome"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/list_view_bg"
        android:paddingLeft="15sp"
        android:layout_height="60dp"
        android:id="@+id/etbusca" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/lv_lista"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etbusca"
        android:layout_above="@+id/bt_dev" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_dev"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/list_view_bg"
        android:layout_alignParentEnd="true"
        android:text="Desenvolvido por Jean Sarlon"
        android:textSize="12sp" />

</RelativeLayout>
